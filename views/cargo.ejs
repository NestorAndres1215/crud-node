<%- include('templates/cabecera.ejs') %>


<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">

    <!-- TARJETA PRINCIPAL -->
    <div class="bg-white rounded-3xl shadow-xl p-6 md:p-10 border border-gray-200">

      <!-- TÍTULO -->
      <div class="text-center mb-8">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 inline-flex items-center gap-3 title-animate">
          <i class="fa-solid fa-list text-navy"></i> Lista de Cargo
        </h2>
      </div>

      <!-- BOTÓN NUEVO CARGO -->
      <div class="text-end mb-6">
        <a href="/cargonew"
           class="inline-flex items-center gap-2 bg-navy hover:bg-blue-950 text-white font-semibold px-6 py-3 rounded-xl shadow-md transition-all duration-300 transform hover:scale-105 pulse-animation">
          <i class="fa-solid fa-plus"></i> Nuevo Cargo
        </a>
      </div>

      <!-- TABLA -->
      <div class="bg-white rounded-2xl shadow-md overflow-hidden border border-gray-200">
        <div class="overflow-x-auto">
          <table class="w-full text-sm md:text-base">
            <!-- HEADER AZUL MARINO -->
            <thead class="bg-navy text-white">
              <tr class="text-center">
                <th class="px-6 py-4 font-semibold rounded-tl-2xl">ID</th>
                <th class="px-6 py-4 font-semibold">Cargo</th>
                <th class="px-6 py-4 font-semibold">Sueldo</th>
                <th class="px-6 py-4 font-semibold rounded-tr-2xl">Acciones</th>
              </tr>
            </thead>
            <!-- CUERPO -->
            <tbody class="divide-y divide-gray-100">
              <% results.forEach((user, index) => { %>
              <tr class="hover:bg-gray-50 transition-all duration-200 text-center animate-fade-in-up" style="animation-delay: <%= index * 100 %>ms">
                <td class="px-6 py-4 font-bold text-navy"><%= user.IdCargo %></td>
                <td class="px-6 py-4"><%= user.Cargo %></td>
                <td class="px-6 py-4 text-green-700 font-medium"><%= user.Sueldo %></td>
                <td class="px-6 py-4 space-x-2">
                  <!-- EDITAR -->
                  <a href="/cargoedit/<%= user.IdCargo %>"
                     class="inline-flex items-center gap-1 bg-navy hover:bg-blue-950 text-white text-xs md:text-sm font-medium px-4 py-2 rounded-lg transition transform hover:scale-105">
                    <i class="fa-solid fa-pen-to-square"></i>
                    <span class="hidden sm:inline">Editar</span>
                  </a>
                  <!-- ELIMINAR -->
                  <a href="/cargodelete/<%= user.IdCargo %>"
                     class="inline-flex items-center gap-1 bg-red-600 hover:bg-red-700 text-white text-xs md:text-sm font-medium px-4 py-2 rounded-lg transition transform hover:scale-105"
                     onclick="return confirm('¿Eliminar este cargo?')">
                    <i class="fa-solid fa-trash-can"></i>
                    <span class="hidden sm:inline">Eliminar</span>
                  </a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>

          <!-- SIN DATOS -->
          <% if (results.length === 0) { %>
            <div class="text-center py-16 text-gray-500">
              <i class="fa-solid fa-briefcase-slash text-6xl mb-4"></i>
              <p class="text-lg font-medium">No hay cargos registrados.</p>
            </div>
          <% } %>
        </div>
      </div>

    </div>
  </div>
</div>

