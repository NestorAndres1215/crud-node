<%- include("templates/cabecera.ejs") %>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 space-y-20">
        <section class="text-center animate-fade-in">
            <h1 class="text-4xl md:text-6xl font-bold text-navy mb-6 leading-tight">
                <span class="block text-primary">BIENVENIDO A</span>
                <span class="block">AAT SECURITY</span>
            </h1>
            <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                Líder en formación tecnológica con certificaciones internacionales y convalidación universitaria.
            </p>
        </section>
        <section class="grid md:grid-cols-2 gap-10 items-center animate-fade-in-up">
            <div class="space-y-5">
                <h2 class="text-3xl md:text-4xl font-bold text-navy">
                    ¿QUÉ ES COMPUTACIÓN E INFORMÁTICA?
                </h2>
                <p class="text-gray-700 leading-relaxed">
                    La <strong class="text-primary">Computación</strong> abarca el diseño, desarrollo y procesamiento de
                    hardware.
                    La <strong class="text-primary">Informática</strong> transforma datos en información útil mediante
                    software.
                </p>
                <p class="text-gray-700">
                    Con nosotros, obtendrás un título profesional en <strong>3 años</strong> y podrás convalidar en
                    <strong>UPC, UPN, ESAN y La Salle</strong>.
                </p>
            </div>
            <div class="flex justify-center">
                <img src="im1.jpg" class="rounded-2xl shadow-xl w-full max-w-md object-cover border border-gray-200"
                    alt="Computación e Informática">
            </div>
        </section>

        <!-- ¿POR QUÉ ELEGIRNOS? -->
        <section class="bg-gradient-to-r from-navy to-blue-900 text-white py-16 rounded-3xl animate-fade-in-up">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold">¿POR QUÉ ELEGIR AAT SECURITY?</h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto px-6">
                <div class="text-center">
                    <div
                        class="bg-white text-navy w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold shadow-lg">
                        1
                    </div>
                    <h3 class="text-xl font-bold mb-2">Certificaciones Internacionales</h3>
                    <p class="text-blue-100">Microsoft, Cisco, Oracle y más.</p>
                </div>
                <div class="text-center">
                    <div
                        class="bg-white text-navy w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold shadow-lg">
                        2
                    </div>
                    <h3 class="text-xl font-bold mb-2">Convalidación Universitaria</h3>
                    <p class="text-blue-100">Accede a UPC, UPN, ESAN y La Salle.</p>
                </div>
                <div class="text-center">
                    <div
                        class="bg-white text-navy w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold shadow-lg">
                        3
                    </div>
                    <h3 class="text-xl font-bold mb-2">Empleabilidad 95%</h3>
                    <p class="text-blue-100">Nuestros egresados trabajan en empresas top.</p>
                </div>
            </div>
        </section>

        <!-- NUESTROS VALORES -->
        <section class="grid md:grid-cols-4 gap-6 animate-fade-in-up">
            <% const valores=[ { icon: "fa-solid fa-graduation-cap" , title: "Excelencia Académica" ,
                desc: "Formación de calidad con docentes expertos." }, { icon: "fa-solid fa-handshake" ,
                title: "Compromiso" , desc: "Apoyo constante al estudiante." }, { icon: "fa-solid fa-lightbulb" ,
                title: "Innovación" , desc: "Tecnología de punta en todas las aulas." }, { icon: "fa-solid fa-users" ,
                title: "Comunidad" , desc: "Red de egresados activa y solidaria." } ]; valores.forEach(valor=> {
                %>
                <div
                    class="bg-white p-6 rounded-2xl shadow-lg text-center hover:shadow-xl transition border border-gray-100">
                    <i class="<%= valor.icon %> text-4xl text-primary mb-4"></i>
                    <h3 class="text-lg font-bold text-navy mb-2">
                        <%= valor.title %>
                    </h3>
                    <p class="text-sm text-gray-600">
                        <%= valor.desc %>
                    </p>
                </div>
                <% }) %>
        </section>
        <section class="bg-gray-100 py-16 rounded-3xl animate-fade-in-up">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-navy">NUESTROS NÚMEROS</h2>
            </div>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
                <div class="text-center">
                    <h3 class="text-5xl font-bold text-primary">+5,000</h3>
                    <p class="text-gray-700 mt-2">Egresados</p>
                </div>
                <div class="text-center">
                    <h3 class="text-5xl font-bold text-primary">95%</h3>
                    <p class="text-gray-700 mt-2">Empleabilidad</p>
                </div>
                <div class="text-center">
                    <h3 class="text-5xl font-bold text-primary">8</h3>
                    <p class="text-gray-700 mt-2">Sedes en Perú</p>
                </div>
                <div class="text-center">
                    <h3 class="text-5xl font-bold text-primary">20+</h3>
                    <p class="text-gray-700 mt-2">Certificaciones</p>
                </div>
            </div>
        </section>
        <section class="grid md:grid-cols-2 gap-8 animate-fade-in-up">
            <div class="bg-white p-8 rounded-2xl shadow-lg border border-gray-100">
                <h2 class="text-2xl font-bold text-navy mb-5 flex items-center gap-3">
                    Certificaciones
                </h2>
                <ul class="space-y-3 text-gray-700">
                    <li class="flex items-center gap-2">Check Fundamentos de Programación y TI</li>
                    <li class="flex items-center gap-2">Check Desarrollo de Software y Gestión de Datos</li>
                    <li class="flex items-center gap-2">Check Gestión de Aplicaciones Multiplataforma</li>
                </ul>
            </div>
            <div class="bg-white p-8 rounded-2xl shadow-lg border border-gray-100">
                <h2 class="text-2xl font-bold text-navy mb-5 flex items-center gap-3">
                    ¿Dónde estudiar?
                </h2>
                <p class="text-gray-700 leading-relaxed">
                    Modalidad <strong>online</strong> y <strong>semi presencial</strong> en: <br>
                    <strong>Independencia, Breña, Bellavista, San Juan, Lima Centro, Trujillo, Arequipa</strong>.
                </p>
            </div>
        </section>
        <section class="text-center animate-fade-in-up">
            <h2 class="text-3xl font-bold text-navy mb-10">NUESTROS SOCIOS ESTRATÉGICOS</h2>
            <div class="flex flex-wrap justify-center items-center gap-10 md:gap-16">
                <img src="stanford.png" alt="Stanford"
                    class="h-16 md:h-20 object-contain filter grayscale hover:grayscale-0 transition duration-300">
                <img src="oxford.png" alt="Oxford"
                    class="h-16 md:h-20 object-contain filter grayscale hover:grayscale-0 transition duration-300">
                <img src="harvard.jpg" alt="Harvard"
                    class="h-16 md:h-20 object-contain filter grayscale hover:grayscale-0 transition duration-300">
            </div>
        </section>

    </main>

    <%- include("templates/footer.ejs") %>