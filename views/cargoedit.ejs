<%- include("templates/cabecera") %>
    <div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
            <!-- TARJETA PRINCIPAL -->
            <div class="bg-white rounded-3xl shadow-xl border-2 border-navy overflow-hidden">

                <!-- HEADER AZUL MARINO -->
                <div class="bg-navy text-white p-6 text-center">
                    <h3 class="text-2xl md:text-3xl font-bold flex items-center justify-center gap-3">
                        <i class="fa-solid fa-briefcase"></i>
                        Modificar Registro Cargo
                    </h3>
                </div>

                <!-- FORMULARIO -->
                <div class="p-6 md:p-10">
                    <form action="/updatecargo" method="post" class="space-y-5">

                        <!-- ID Cargo (readonly) -->
                        <div>
                            <label for="id" class="block text-sm font-medium text-gray-700 mb-1">
                                <i class="fa-solid fa-id-badge text-navy"></i> IdCargo
                            </label>
                            <input type="text" id="id" name="id" value="<%= user.IdCargo %>"
                                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-navy focus:border-navy transition"
                                tabindex="1" readonly>
                        </div>

                        <!-- Cargo -->
                        <div>
                            <label for="car" class="block text-sm font-medium text-gray-700 mb-1">
                                <i class="fa-solid fa-user-tie text-navy"></i> Cargo
                            </label>
                            <input type="text" id="car" name="car" value="<%= user.Cargo %>" placeholder="Ej: Gerente"
                                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-navy focus:border-navy transition"
                                tabindex="2" required>
                        </div>

                        <!-- Sueldo -->
                        <div>
                            <label for="suel" class="block text-sm font-medium text-gray-700 mb-1">
                                <i class="fa-solid fa-money-bill-wave text-green-600"></i> Sueldo
                            </label>
                            <input type="text" id="suel" name="suel" value="<%= user.Sueldo %>"
                                placeholder="Ej: 5000.00"
                                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-navy focus:border-navy transition"
                                tabindex="3" required>
                        </div>
                        <div class="flex flex-col sm:flex-row gap-3 pt-6">
                            <button type="submit"
                                class="flex-1 inline-flex items-center justify-center gap-2 bg-navy hover:bg-blue-950 text-white font-semibold px-6 py-3 rounded-xl shadow-md transition transform hover:scale-105"
                                tabindex="4">
                                <i class="fa-solid fa-save"></i> Guardar
                            </button>
                            <a href="/cargo"
                                class="flex-1 inline-flex items-center justify-center gap-2 bg-gray-500 hover:bg-gray-600 text-white font-semibold px-6 py-3 rounded-xl shadow-md transition text-center"
                                tabindex="5">
                                <i class="fa-solid fa-ban"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>