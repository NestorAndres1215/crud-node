<%- include('templates/cabecera.ejs')%>
<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">

    <!-- TARJETA PRINCIPAL -->
    <div class="bg-white rounded-3xl shadow-xl p-6 md:p-10 border border-gray-200">

      <!-- TÍTULO -->
      <div class="text-center mb-8">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 inline-flex items-center gap-3">
          <i class="fa-solid fa-users-gear text-navy"></i> Lista de Empleados
        </h2>
      </div>

      <!-- BOTÓN NUEVO -->
      <div class="text-end mb-6">
        <a href="/empleadonew"
           class="inline-flex items-center gap-2 bg-navy hover:bg-blue-950 text-white font-semibold px-6 py-3 rounded-xl shadow-md transition-all duration-300 transform hover:scale-105">
          <i class="fa-solid fa-user-plus"></i> Nuevo Empleado
        </a>
      </div>

      <!-- TABLA -->
      <div class="bg-white rounded-2xl shadow-md overflow-hidden border border-gray-200">
        <div class="overflow-x-auto">
          <table class="w-full text-sm md:text-base">
            <!-- HEADER AZUL MARINO -->
            <thead class="bg-navy text-white">
              <tr class="text-left">
                <th class="px-6 py-4 font-semibold rounded-tl-2xl">ID</th>
                <th class="px-6 py-4 font-semibold">Apellidos</th>
                <th class="px-6 py-4 font-semibold">Nombres</th>
                <th class="px-6 py-4 font-semibold hidden sm:table-cell">Dirección</th>
                <th class="px-6 py-4 font-semibold hidden md:table-cell">Teléfono</th>
                <th class="px-6 py-4 font-semibold">Cargo</th>
                <th class="px-6 py-4 font-semibold rounded-tr-2xl text-center">Acciones</th>
              </tr>
            </thead>
            <!-- CUERPO -->
            <tbody class="divide-y divide-gray-100">
              <% results.forEach((user) => { %>
              <tr class="hover:bg-gray-50 transition-all duration-200">
                <td class="px-6 py-4 font-bold text-navy"><%= user.IdEmpleado %></td>
                <td class="px-6 py-4"><%= user.Apellidos %></td>
                <td class="px-6 py-4"><%= user.Nombres %></td>
                <td class="px-6 py-4 hidden sm:table-cell text-gray-600"><%= user.Direccion %></td>
                <td class="px-6 py-4 hidden md:table-cell"><%= user.Telefono %></td>
                <td class="px-6 py-4"><%= user.IdCargo %></td>
                <td class="px-6 py-4 text-center space-x-2">
                  <!-- EDITAR (AZUL MARINO) -->
                  <a href="/empleadoedit/<%= user.IdEmpleado %>"
                     class="inline-flex items-center gap-1 bg-navy hover:bg-blue-950 text-white text-xs md:text-sm font-medium px-4 py-2 rounded-lg transition transform hover:scale-105">
                    <i class="fa-solid fa-pen-to-square"></i>
                    <span class="hidden sm:inline">Editar</span>
                  </a>
                  <!-- ELIMINAR (ROJO) -->
                  <a href="/empleadodelete/<%= user.IdEmpleado %>"
                     class="inline-flex items-center gap-1 bg-red-600 hover:bg-red-700 text-white text-xs md:text-sm font-medium px-4 py-2 rounded-lg transition transform hover:scale-105"
                     onclick="return confirm('¿Eliminar empleado?')">
                    <i class="fa-solid fa-trash-can"></i>
                    <span class="hidden sm:inline">Eliminar</span>
                  </a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>

          <!-- SIN DATOS -->
          <% if (results.length === 0) { %>
            <div class="text-center py-16 text-gray-500">
              <i class="fa-solid fa-users-slash text-6xl mb-4"></i>
              <p class="text-lg font-medium">No hay empleados registrados.</p>
            </div>
          <% } %>
        </div>
      </div>

    </div>
  </div>
</div>